<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/acc_izmena.css">
    <link rel="icon" href="../img/logo.png" type="image/icon type">
    <title>Profile izmena</title>
    
   
</head>
<body>
    <a href="/myacc"><svg class="previous" aria-colspan="previous" xmlns="http://www.w3.org/2000/svg" width="46" height="46" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
        <path d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1z"/>
      </svg></a>
    <section class="login">
        <div class="overlay"></div>
       
        <div class="login-form">
            <% izmena.forEach(function(change)  {%>
            <form class="prijava" action="/update/:<%= change.id %>" method="POST">
                <div class="picture">
                    <img src="../img/logo.png" alt="">
                </div>
                <div class="title"> <h2>Profil izmena</h2></div>
               <input type="text" name="id" value="<%= change.id %>" style="display: none;" id="">
                <input type="text" id="ime" name="ime" placeholder="Ime" value="<%= change.ime %>" required>  <br>
                <input type="text" id="prezime" name="prezime" value="<%= change.prezime %>" placeholder="Prezime" required> <br>
                <input type="date"  name="datum_rodjenja" value="<%= change.datum_rodjenja %>" id="datum_rodjenja" required> <br>
                <input type="email" name="email" value="<%= change.email %>" placeholder="E-mail adresa" id="email" required> <br>
                <input type="password" name="password" value="<%= change.password %>" id="password" placeholder="Lozinka" required> <br>
                <input type="text" name="username" value="<%= change.username %>" id="username" placeholder="Username" required>
                <br>
               <!-- <form action="/profil_izmena/<%= change.id %>" method="POST"> -->
                    <input class="btn_izmeni" class="mt-3"  type="submit" name="napravi" value="Izmeni"> </form>
         <!--   </form>  -->
                <% }) %>
            
        </div>
    </section>

</body>
</html>
